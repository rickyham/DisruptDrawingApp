{
    "manifest_version": 2,
    
    "name": "Project Disrupt",
    "description": "Your about to disrupt!!!",
    "version": "0.0.1",
    
    "browser_action": {
        "default_icon": "icon.png"
    },
    
    "browser_action": {
        "default_icon": "img/icon.png"
    },
    
    "background": { "scripts": ["js/background.js"] },
    
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": ["js/content.js"],
        "css": ["css/style.css"],
        "all_frames": true
    }]
    
}